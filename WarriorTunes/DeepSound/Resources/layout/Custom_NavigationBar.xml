<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/buttomnavigationBar"
    android:background="@drawable/rounded_dialog"
    android:layout_alignParentBottom="true"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="bottom">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_alignParentBottom="true"
      android:layout_height="55dp"
      android:layout_gravity="bottom"
      android:baselineAligned="false"
      android:id="@+id/llMain"
      android:gravity="center"
      android:orientation="horizontal"
      android:weightSum="5"
      app:layout_behavior="@string/hide_bottom_view_on_scroll_behavior">
        <LinearLayout
            android:id="@+id/llcustom0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_ripple"
            android:orientation="vertical">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:id="@+id/ivcustom0"
                android:tint="@color/accent"
                android:src="@drawable/icon_home_vector" />
            <TextView
	            android:id="@+id/txtcustom0"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Lbl_Home"
                android:textSize="13sp"
                android:layout_marginTop="-5dp"
	            android:textColor="@color/accent"
	            android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llcustom2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_ripple"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:id="@+id/ivcustom2"
                android:tint="@color/secondaryText"
                android:src="@drawable/icon_trending_vector" />
            <TextView
	            android:id="@+id/txtcustom2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Lbl_Trending"
	            android:textSize="13sp"
	            android:layout_marginTop="-5dp"
	            android:textColor="@color/secondaryText"
	            android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llcustom3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_ripple"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:id="@+id/ivcustom3"
                android:tint="@color/secondaryText"
                android:src="@drawable/icon_favorite_vector" />
            <TextView
	            android:id="@+id/txtcustom3"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Lbl_Favorites"
	            android:textSize="13sp"
	            android:layout_marginTop="-5dp"
	            android:textColor="@color/secondaryText"
	            android:gravity="center" />
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/llcustom4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_ripple"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
                android:padding="8dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/ivcustom4"
                android:tint="@color/secondaryText"
                android:src="@drawable/icon_library_vector" />
            <TextView
	            android:id="@+id/txtcustom4"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Lbl_Library"
	            android:textSize="13sp"
	            android:layout_marginTop="-5dp"
	            android:textColor="@color/secondaryText"
	            android:gravity="center" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llcustom5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/custom_ripple"
            android:orientation="vertical">
            <ImageView
	            android:layout_width="40dp"
	            android:layout_height="wrap_content"
                android:padding="8dp"
                android:layout_gravity="center"
                android:id="@+id/ivcustom5"
                android:tint="@color/secondaryText"
                android:src="@drawable/icon_profile_vector" />
            <TextView
	            android:id="@+id/txtcustom5"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/Lbl_Profile"
	            android:textSize="13sp"
	            android:layout_marginTop="-5dp"
	            android:textColor="@color/secondaryText"
	            android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>