<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainliner_container"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_gravity="fill"
        android:layout_width="145dp"
        android:layout_height="135dp" 
        app:cardBackgroundColor="@color/gnt_white"
        app:cardCornerRadius="30dp"
        android:background="?attr/selectableItemBackground"
        android:layout_margin="1dp"
        app:cardElevation="1.5dp">
        <ImageView
            android:id="@+id/imageSound"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:clickable="false"
            android:src="@drawable/imageplacholder"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:singleLine="true"
        android:drawablePadding="4dp"
        android:textSize="17dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="3dp"
        android:clickable="false"
        android:focusable="false"
        android:typeface="normal"
        android:gravity="start" />
    <TextView
        android:id="@+id/seconderyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="#999"
        android:textSize="12.5dp"
        android:layout_marginStart="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:focusable="false"
        android:clickable="false" />

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:orientation="horizontal">
	    <TextView
		    android:backgroundTint="#777"
		    android:background="@drawable/shape_radius_btn"
		    android:layout_marginStart="3dp"
		    android:layout_marginTop="6dp"
		    android:visibility="visible"
		    android:id="@+id/image_countSound"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:clickable="false"
		    android:focusable="false"
		    android:textColor="@color/gnt_white"
		    android:typeface="normal"
		    android:textSize="13dp"
		    android:paddingStart="10dp"
		    android:paddingEnd="10dp"
		    android:paddingTop="4dp"
		    android:paddingBottom="4dp"
		    android:gravity="center" />

	    <TextView
		    android:background="@drawable/shape_radius_gradient_btn3"
		    android:forceDarkAllowed="false"
		    android:layout_marginTop="6dp"
		    android:layout_marginStart="10dp"
		    android:text="0.00"
		    android:id="@+id/price"
			android:visibility="gone"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:clickable="false"
		    android:focusable="false"
		    android:textColor="@color/gnt_white"
		    android:typeface="normal"
		    android:textSize="13dp"
		    android:paddingStart="10dp"
		    android:paddingEnd="10dp"
		    android:paddingTop="4dp"
		    android:paddingBottom="4dp"
		    android:gravity="center" />
         
    </LinearLayout>
   
</LinearLayout>