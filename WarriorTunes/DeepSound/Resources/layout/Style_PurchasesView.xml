<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:focusable="true"
    android:clickable="true"
    android:layout_margin="10dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="?attr/colorFill"
    app:cardElevation="0.6dp" 
    app:cardCornerRadius="10dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="12"
        android:layout_marginTop="0dp"
        android:paddingBottom="10dp">
        <ImageView
            android:id="@+id/Image"
            android:layout_alignParentTop="true"
            android:adjustViewBounds="true"
            android:layout_height="150dp"
            android:layout_width="match_parent"
			android:scaleType="centerCrop"
            android:src="@drawable/imageplacholder" />
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="13dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:backgroundTint="#E85668"
            android:background="@drawable/shape_radius_btn"
            android:textStyle="bold"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:focusable="false"
            android:clickable="false"
            android:maxLines="1"
            android:text="@string/Lbl_Event"
            android:layout_marginTop="7dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp" />
        <TextView
            android:layout_below="@+id/Image"
            android:id="@+id/title"
            android:layout_weight="1.5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false"
            android:lines="1"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="3dp" />
        <TextView
            android:layout_below="@+id/title"
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginEnd="5dp"
            android:focusable="false"
            android:clickable="false"
            android:maxLines="1"
            android:layout_marginTop="3dp"
            android:layout_marginStart="12dp"
            android:layout_marginBottom="10dp" />
        

    </RelativeLayout>
</androidx.cardview.widget.CardView>