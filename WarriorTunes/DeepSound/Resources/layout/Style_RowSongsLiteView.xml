<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/lyt_parent"
	android:layout_width="match_parent"
	android:layout_height="90dp"
	android:elevation="1dp"
	android:layout_marginTop="0dp"
	android:layout_marginBottom="1dp"
	android:layout_marginStart="0dp"
	android:layout_marginEnd="1dp"
	android:minHeight="?attr/actionBarSize"
	android:background="?attr/selectableItemBackground"
	android:orientation="horizontal">

	<androidx.cardview.widget.CardView
		android:id="@+id/cardview2"
		android:layout_alignParentStart="true"
		android:layout_gravity="fill"
		android:layout_centerVertical="true"
		android:layout_width="80dp"
		android:layout_height="80dp"
		app:cardBackgroundColor="?attr/colorFill"
		app:cardCornerRadius="20dp"
		android:layout_marginEnd="5dp"
		android:layout_marginStart="10dp"
		android:layout_marginTop="6dp"
		app:cardElevation="0dp">
		<ImageView
			android:id="@+id/Image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:scaleType="centerCrop"
			android:src="@drawable/ImagePlacholder" />
	</androidx.cardview.widget.CardView>

	<LinearLayout
		android:layout_toEndOf="@+id/cardview2"
		android:layout_marginStart="10dp"
		android:layout_marginEnd="55dp"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:gravity="center_vertical"
		android:layout_centerVertical="true"
		android:layout_height="match_parent">
		<TextView
			android:id="@+id/title"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:textStyle="bold"/>

		<TextView
			android:id="@+id/brief"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:maxLines="1"
			android:layout_marginTop="10dp"
			android:textSize="12sp"
			android:textColor="@color/secondaryText2"   />
	</LinearLayout>
	  
	<ImageView 
		android:id="@+id/heart"
		android:layout_marginTop="4dp"
		android:layout_width="24dp"
		android:layout_centerVertical="true"
		android:layout_marginStart="5dp" 
		android:layout_marginEnd="20dp"
		android:layout_alignParentEnd="true"
		android:layout_below="@+id/textView_songname"  
		android:src="@drawable/icon_player_heart" 
		android:layout_height="24dp"/>
</RelativeLayout>