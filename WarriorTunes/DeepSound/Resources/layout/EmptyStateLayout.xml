<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="380dp"
              android:orientation="vertical"
              android:gravity="center">
    <ImageView
        android:id="@+id/emtyicon"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:padding="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/emptypage"/>
 <!--   <TextView
        android:id="@+id/emtyicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:forceDarkAllowed="false"
        android:textColor="@color/accent"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="110sp"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="5dp" />-->
    <TextView
        android:id="@+id/headText"
        android:layout_below="@+id/emtyicon"
        android:layout_width="wrap_content"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginTop="25dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/Lbl_NoConnection_TitleText"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_below="@+id/headText"
        android:id="@+id/seconderyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:textStyle="normal"
        android:layout_marginTop="10dp" 
        android:layout_marginStart="30dp"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="30dp"
        android:text="@string/Lbl_NoConnection_DescriptionText"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:typeface="normal"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_horizontal" />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_below="@+id/seconderyText"
        android:forceDarkAllowed="false"
        android:background="@xml/background_signup"
        android:layout_height="40dp"
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:text="@string/Lbl_NoConnection_Button"
        android:textColor="@color/gnt_white"
        android:textSize="15sp"
        android:clickable="true"
        android:textAllCaps="false"
        android:layout_marginStart="65dp"
        android:layout_marginEnd="65dp"
        android:id="@+id/button" />
</LinearLayout>