<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/mainCardView"
	android:layout_gravity="fill"
	android:layout_width="match_parent"
	android:layout_height="120dp"
	app:cardBackgroundColor="@color/accent"
	app:cardCornerRadius="20dp"
	android:layout_margin="8dp"
	app:cardElevation="5dp"
	android:outlineAmbientShadowColor="@color/accent"
	android:outlineSpotShadowColor="@color/accent">
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<TextView
			android:id="@+id/titleText"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="15dp"
			android:maxLines="3"
			android:layout_marginEnd="13dp"
			android:layout_marginStart="13dp"
			android:layout_marginTop="10dp"
			android:layout_marginBottom="0dp"
			android:textColor="@color/gnt_white"
			android:text="aweadsda weadsd aweadsd"   /> 
		 
		<ImageView
			android:id="@+id/Check"
			android:layout_width="20dp"
			android:layout_height="20dp"
			android:visibility="gone"
			android:layout_marginStart="13dp"
			android:src="@drawable/icon_tick_vector"
			android:tint="@color/gnt_white"/>

		<View
			android:layout_width="5dp"
			android:layout_height="match_parent"
			android:layout_weight="1"/>

		<ImageView
			android:id="@+id/image"
			android:layout_width="90dp"
			android:layout_height="60dp"
			android:layout_gravity="end|bottom"
			android:gravity="end|bottom"
			android:translationX="15dp"
			android:translationY="5dp"
			android:rotation="-30"
			android:src="@drawable/getpro"
			android:scaleType="centerCrop"/>

	</LinearLayout>
</androidx.cardview.widget.CardView>