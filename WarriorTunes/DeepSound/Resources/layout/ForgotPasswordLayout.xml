<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<ImageView
		android:id="@+id/backArrow"
		android:layout_width="28dp"
		android:layout_height="28dp"
		android:background="?attr/selectableItemBackgroundBorderless"
		android:clickable="true"
		android:layout_alignParentStart="true"
		android:layout_alignParentTop="true"
		android:layout_marginStart="20dp"
		android:layout_marginTop="10dp"
		android:scaleType="centerCrop"
		android:src="@drawable/icon_back_arrow_left" />

	<androidx.core.widget.NestedScrollView
		android:id="@+id/nested_scroll_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_centerInParent="true"
		android:scrollbars="none"
		android:scrollingCache="true">
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_centerInParent="true"
			android:orientation="vertical">

			<ImageView
				android:id="@+id/appicon"
				android:layout_width="90dp"
				android:layout_height="90dp"
				android:layout_below="@id/backArrow"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="40dp"
				android:src="@mipmap/icon" />

			<TextView
				android:id="@+id/logintext"
				android:layout_marginTop="30dp"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_below="@id/appicon"
				android:layout_centerHorizontal="true"
				android:layout_gravity="center_horizontal"
				android:text="@string/Lbl_Forget_password"
				
				android:textSize="25dp"
				android:textStyle="bold" />

			<LinearLayout
				android:id="@+id/basiclinearLayout"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_below="@id/logintext"
				android:layout_centerInParent="true"
				android:layout_marginStart="26dp"
				android:layout_marginEnd="26dp"
				android:orientation="vertical"
				android:padding="@dimen/spacing_large">

				<TextView
					android:layout_marginTop="20dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp"
					android:gravity="center_vertical"
					android:text="@string/Lbl_Please_enter_your_email_address"
					android:textColor="@color/secondaryText"
					android:textSize="12sp"  />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_gravity="center"
					android:layout_marginStart="8dp"
					android:layout_marginEnd="8dp"
					android:gravity="center_vertical"
					android:layout_marginTop="1dp"
					android:text="@string/Lbl_We_will_send_you_link_to_reset_password"
					
					android:textSize="12sp"
					android:textStyle="normal" />

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="60dp"
					android:id="@+id/emailframelayout"
					android:layout_marginTop="22dp"
					android:layout_marginBottom="0dp"
					android:background="@drawable/new_login_status">

					<ImageView
						android:id="@+id/emailicon"
						android:layout_width="20dp"
						android:layout_height="20dp"
						android:layout_alignParentStart="true"
						android:layout_centerVertical="true"
						android:layout_marginStart="20dp"
						android:layout_marginTop="10dp"
						android:src="@drawable/new_email_signup" />

					<EditText
						android:id="@+id/edt_email"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_gravity="center_vertical"
						android:layout_marginStart="15dp"
						android:layout_marginEnd="5dp"
						android:layout_toEndOf="@id/emailicon"
						android:background="@null"
						android:hint="@string/Lbl_Email"
						android:inputType="textEmailAddress"
						android:maxLength="80"
						android:maxLines="1"
						android:singleLine="true"
						
						android:textColorHint="@color/text_color_in_between"
						android:textSize="14sp"
						android:theme="@style/DefaultEditText" />

				</RelativeLayout>

				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="22dp">

					<androidx.appcompat.widget.AppCompatButton
						android:id="@+id/Lbl_Send"
						style="?android:attr/borderlessButtonStyle"
						android:layout_width="match_parent"
						android:layout_height="55dp"
						android:layout_marginBottom="20dp"
						android:background="@drawable/new_button_rounded"
						android:text="@string/Btn_Send"
						android:textAppearance="?android:attr/textAppearanceSmall"
						android:textColor="@color/gnt_white"
						android:textSize="13sp"
						android:visibility="visible" />

					<ProgressBar
						android:id="@+id/progressBar"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerInParent="true"
						android:indeterminateTint="@color/accent"
						android:visibility="gone" />
				</RelativeLayout>

			</LinearLayout>

		</LinearLayout>
	</androidx.core.widget.NestedScrollView>

</LinearLayout>